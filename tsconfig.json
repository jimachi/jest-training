{
  "compilerOptions": {
    "target": "ES2020",
    "strict": true,
    "outDir": "./dist",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "skipLibCheck": true,
  },
  "include": ["./src/**/*.ts"],
  "ts-node": {
    "esm": true,
  },
}
